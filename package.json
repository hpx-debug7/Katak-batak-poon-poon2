{
  "name": "enterprise-lead-management-system",
  "version": "2.1.0",
  "description": "Professional Enterprise Lead Management & CRM System",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --no-lint",
    "build:prod": "next build --no-lint --no-mangling",
    "export:prod": "next build --no-lint --no-mangling",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "build:analyze": "set ANALYZE=true && next build",
    "clean": "rm -rf .next out dist",
    "clean:win": "if exist .next rmdir /s /q .next && if exist out rmdir /s /q out && if exist dist rmdir /s /q dist",
    "preview": "next build && next start",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron": "npm run build:prod && electron-builder",
    "build-electron:win": "npm run clean:win && npm run build:prod && electron-builder --win",
    "dist": "npm run build-electron",
    "dist:win": "npm run build-electron:win",
    "package:client": "node scripts/package-for-client.js",
    "build:installer": "npm run package:client",
    "verify:build": "node scripts/verify-build.js",
    "auto-commit": "node auto-commit.js",
    "auto-commit:start": "start-auto-commit.bat",
    "dev:full": "start-development.bat",
    "dev:ps": "start-development.ps1",
    "status": "project-status.bat",
    "setup": "npm install && npm run auto-commit:start",
    "test": "vitest run",
    "test:unit": "vitest run tests/ --exclude tests/api/",
    "test:integration": "vitest run tests/api/",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "db:push": "npx prisma db push",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:studio": "npx prisma studio",
    "db:backup": "node scripts/backup-db.js",
    "db:restore": "node scripts/restore-db.js",
    "test:api": "vitest run tests/api",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:auth": "playwright test e2e/api-validation.spec.ts e2e/auth.spec.ts",
    "test:e2e:api": "playwright test e2e/leads-api.spec.ts e2e/documents-api.spec.ts",
    "test:testsprite": "tsx scripts/run-testsprite-tests.ts",
    "test:report": "tsx testsprite_tests/report-generator.ts",
    "test:all": "npm run test:testsprite",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.7.4",
    "@aws-sdk/client-s3": "^3.500.0",
    "@aws-sdk/client-textract": "^3.500.0",
    "@aws-sdk/s3-request-presigner": "^3.500.0",
    "@azure/msal-node": "^3.8.4",
    "@azure/storage-blob": "^12.17.0",
    "@boxyhq/saml-jackson": "^1.26.1",
    "@fullcalendar/core": "^6.1.20",
    "@fullcalendar/daygrid": "^6.1.20",
    "@fullcalendar/interaction": "^6.1.20",
    "@fullcalendar/react": "^6.1.20",
    "@fullcalendar/timegrid": "^6.1.20",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@prisma/adapter-better-sqlite3": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.90.17",
    "@tanstack/react-query-devtools": "^5.91.2",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.0",
    "bull": "^4.12.0",
    "cheerio": "^1.1.2",
    "clamscan": "^2.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.3.0",
    "dompurify": "^3.2.7",
    "express": "^4.21.2",
    "googleapis": "^170.0.0",
    "ical-generator": "^10.0.0",
    "idb": "^8.0.3",
    "ioredis": "^5.3.0",
    "jose": "^6.1.3",
    "juice": "^11.1.0",
    "next-auth": "^5.0.0-beta.25",
    "node-ical": "^0.23.1",
    "nodemailer": "^6.9.16",
    "otplib": "^12.0.1",
    "pdf-parse": "^1.1.1",
    "qrcode": "^1.5.4",
    "quill": "^2.0.3",
    "react-quill": "^2.0.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tesseract.js": "^5.0.0",
    "zod": "^4.3.5"
  },
  "overrides": {
    "react": "$react",
    "react-dom": "$react-dom"
  },
  "devDependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.2",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.19.17",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-window": "^1.8.8",
    "concurrently": "^9.2.1",
    "electron": "^33.4.11",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "framer-motion": "^12.23.12",
    "gsap": "^3.13.0",
    "jsdom": "^21.1.0",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "prisma": "^7.2.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-window": "^1.8.10",
    "recharts": "^3.1.2",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4",
    "xlsx": "^0.18.5"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.enterpriseleadmgmt.app",
    "productName": "Enterprise Lead Management System",
    "asar": true,
    "directories": {
      "output": "dist_v2_1_0",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "node_modules/**/*",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/test/**/*",
      "!node_modules/**/tests/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/README*",
      "!node_modules/**/CHANGELOG*",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/*.map",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "out",
        "to": "app",
        "filter": [
          "**/*",
          "!**/*.map"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName} Setup ${version}.${ext}",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Enterprise Lead Management System",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "preCompressedFileExtensions": [
        ".avi",
        ".mov",
        ".mp4",
        ".mkv",
        ".webm",
        ".zip",
        ".7z",
        ".png",
        ".jpg",
        ".jpeg",
        ".gif",
        ".webp"
      ],
      "installerIcon": "build/installerIcon.ico",
      "uninstallerIcon": "build/installerIcon.ico",
      "include": "build/installer.nsh",
      "license": "build/license.txt",
      "installerHeaderIcon": "build/installerHeaderIcon.ico",
      "displayLanguageSelector": false
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}